# This should be run from parent folder, to give full project context
FROM golang:1.10.3 as builder
WORKDIR /go/src/github.com/smartfog/fogflow/
COPY . .
WORKDIR /go/src/github.com/smartfog/fogflow/discovery
RUN go get
RUN GOOS=linux GOARCH=arm go build -a -o discovery_arm

FROM alpine:3.7
COPY --from=builder /go/src/github.com/smartfog/fogflow/discovery/discovery_arm ./discovery
CMD ["/discovery"]