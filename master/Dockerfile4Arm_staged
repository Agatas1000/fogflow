# This should be run from parent folder, to give full project context
FROM golang:1.10.3 as builder
WORKDIR /go/src/github.com/smartfog/fogflow/
COPY . .
WORKDIR /go/src/github.com/smartfog/fogflow/master
RUN go get
RUN GOOS=linux GOARCH=arm go build -a -o master_arm

FROM scratch
COPY --from=builder /go/src/github.com/smartfog/fogflow/master/master_arm ./master
CMD ["/master"]
